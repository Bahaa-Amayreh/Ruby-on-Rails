<% provide(:title,'Index Page')%>
<% if @users.any? %>

  <table class="mytable">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Select</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
           <td><%= link_to 'Select', user_path(user.id)  %></td>
          <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
          <td><%= button_to "Delete", user_path(user.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="8">End of User List :)</td>
      </tr>
    </tfoot>
  </table>

<% else %>

  <div >
    There are no users.
  </div>

<% end %>
